<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGrey"
    tools:context="net.go-factory.zandor.ui.splash.ForgotPasswordActivity">


    <TextView
        android:id="@+id/header"
        style="@style/SigninPageSubHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="@string/forgot_password_header" />


    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_below="@id/header"
        android:layout_marginTop="30dp"
        android:alpha="0.3"
        android:src="@drawable/background" />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="300dp"
        android:hint="@string/hint_email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:textColor="@color/warm_grey_dark"
        android:textColorHint="@color/warm_grey_dark" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/emailAddress"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/reset"
            style="@style/FormButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:alpha="0.5"
            android:enabled="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/reset_password_button" />
    </RelativeLayout>

</RelativeLayout>

